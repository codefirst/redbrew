= form_for @plugin do |f|
  -if @plugin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plugin.errors.count, "error")} prohibited this plugin from being saved:"
      %ul
        - @plugin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :desription
    = f.text_field :desription
  .field
    = f.label :formula
    = f.number_field :formula
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
