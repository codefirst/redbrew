%h4 Editing plugin

= render 'form'

= link_to 'Show', @plugin
\|
= link_to 'Back', plugins_path

.right
  = button_to 'Remove', @plugin, :confirm => 'Are you sure?', :method => :delete

:javascript
  var editor = CodeMirror.fromTextArea(document.getElementById("plugin_formula"), {
    mode: "text/x-ruby",
    tabMode: "indent",
    matchBrackets: true,
    indentUnit: 4,
    lineNumbers: true
  });
