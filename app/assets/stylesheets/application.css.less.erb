body {
  background: #eee;
  background-image: url(<%= asset_data_uri 'strip.png' %>);
  background-repeat: repeat;
  background-attachment: fixed;
}

#wrap {
  width: 960px;
  background: #fff;
  margin: 30px auto 30px auto;
  border: 1px solid #ccc;
  border-radius: 10px;
}

#header {
  width: 940px;
  height: 60px;
  padding: 10px;
  border-bottom: 1px solid #CACACA;
  background: #fafafa;
  background-image: -webkit-linear-gradient(#FAFAFA,#EAEAEA);
  -webkit-box-shadow: 1px 1px 2px #eee;
  border-radius: 10px 10px 0 0;

  #title {
    margin-left: 20px;
    margin-right: 20px;
    width: 680px;
    float:left;

    a {
      color: #555;
      text-decoration: none;
    }

    .copy {
      color: #777;
      font-size: 0.8em;
      margin: 0;
      padding-left: 10px;
    }
  }

  #account {
    width: 190px;
    float: right;
    text-align: right;
    height: 40px;
    padding-right: 30px;
    padding-top: 20px;
  }

}

#content {
  width: 880px;
  margin: 20px;
  padding: 20px;
}

.footer {
  text-align: center;
  color: #999;
  font-size: 0.9em;
}

.CodeMirror pre {
  border: none;
  box-shadow: none;
}
.CodeMirror-scroll {
  border: 1px solid #ddd;
  height: 250px;
  overflow-y: auto;
  overflow-x: auto;
}

#search-box {
  width: 340px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 30px;
  #q {
    width: 260px;
  }
}
td.label {
  width: 20px;
  text-align: right;
}

.left-buttons {
  float: left;
}

.right-buttons {
  float: right;
}
