body {
  background: #eee;
  background-image: url(<%= asset_data_uri 'strip.png' %>);
  background-repeat: repeat;
  background-attachment: fixed;
}

#wrap {
  width: 960px;
  background: #fff;
  margin: 30px auto 30px auto;
  border: 1px solid #ccc;
  -webkit-box-shadow: 1px 1px 2px #999;
  border-radius: 10px;
}

#header {
  width: 940px;
  height: 60px;
  padding: 10px;
  border-bottom: 1px solid #CACACA;
  background: #fafafa;
  background-image: -webkit-linear-gradient(#FAFAFA,#EAEAEA);
  -webkit-box-shadow: 1px 1px 2px #eee;
  border-radius: 10px 10px 0 0;
}

#content {
  width: 880px;
  margin: 20px;
  padding: 20px;
}


.footer {
  text-align: center;
  color: #999;
}

#title {
  float: left;
  font-size: 2.5em;
  color: #555;

  a {
    color: #555;
    text-decoration: none;
  }
}

#navi {
  float: right;
  font-size: 1.2em;
  margin: 10px;
}

#navi ul {
  list-style: none;
}

td.label {
  width: 20px;
}

